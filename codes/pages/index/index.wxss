/**index.wxss**/
.canvas{
  width: 750rpx;
  height: 750rpx;
  margin-top: 24rpx;
  background-color: white;
}

.radius-settings-container {
  display: flex;
  width: 750rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}

.radius-settings-item {
  display: flex;
  width: 630rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.radius-settings-txt {
  margin-right: 30rpx;
}

.radius-settings-slider {
  flex: 1;
}

.button-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.mini-btn{
  margin: 10rpx;
}

.txt-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
}

.txt {
  width: 750rpx;
  height: 36rpx;
  color: #BDBDBD;
  font-size: 24rpx;
  text-align: center;
}
